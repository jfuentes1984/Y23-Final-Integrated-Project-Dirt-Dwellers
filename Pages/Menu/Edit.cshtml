@page
@model W21_Assignment.Pages.Menu.EditModel
@using W21_Assignment.Models

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Menu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Menu.MenuId" />
            <div class="form-group">
                <label asp-for="Menu.Main" class="control-label"></label>
                <input asp-for="Menu.Main" class="form-control" />
                <span asp-validation-for="Menu.Main" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Menu.Entree" class="control-label"></label>
                <input asp-for="Menu.Entree" class="form-control" />
                <span asp-validation-for="Menu.Entree" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Menu.Price" class="control-label"></label>
                <input asp-for="Menu.Price" class="form-control" />
                <span asp-validation-for="Menu.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Menu.Day" class="control-label"></label>
                <select asp-for="Menu.Day" asp-items="Html.GetEnumSelectList<Days>()"></select>
                <span asp-validation-for="Menu.Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
