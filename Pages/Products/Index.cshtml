@page
@using Microsoft.AspNetCore.Identity
@model Y23_DirtDwellers.Pages.Products.IndexModel
@inject SignInManager<SiteUser> SignInManager
@inject UserManager<SiteUser> UserManager


@{
    ViewData["Title"] = "Index";
}
<img src="~/imgs/9.jpg" class="homeback" />
<div class="menuback">
    <h1>Our Products</h1>
    @if (SignInManager.IsSignedIn(User))
    {

        <p>
            <a asp-page="Create" class="Edit">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Products[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Products[0].Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Products[0].Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Products[0].Picture)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Products)







                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Picture)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.ProductId" class="Edit">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.ProductId" class="Edit">Details</a> |
                            <a asp-page="./Delete" asp-route-id="@item.ProductId" class="Edit">Delete</a>
                        </td>
                    </tr>







                }
            </tbody>
        </table>















    }







    else







    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Products[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Products[0].Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Products[0].Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Products[0].Picture)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Products)







                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Picture)
                        </td>
                    </tr>







                }
            </tbody>
        </table>







    }
</div>

<style>
    .table {
        font-family: 'Times New Roman', Times, serif;
        font-size: 20px;
        color: white;
    }

    .Edit {
        color: black !important;
        font-family: 'Times New Roman', Times, serif !important;
        font-size: 20px !important;
    }
</style>