@page
@model Y23_DirtDwellers.Pages.Plants.EditModel

@{

    ViewData["Title"] = "Edit";
}
<img src="~/imgs/umbrellaplant.jpg" class="homeback" />

<h1>Edit</h1>

<h4>Plants</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Plant.PlantId" />
            <div class="form-group">
                <label asp-for="Plant.Name" class="control-label"></label>
                <input asp-for="Plant.Name" class="form-control" />
                <span asp-validation-for="Plant.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plant.Picture" class="control-label"></label>
                <input asp-for="Plant.Picture" class="form-control" />
                <span asp-validation-for="Plant.Picture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plant.Description" class="control-label"></label>
                <input asp-for="Plant.Description" class="form-control" />
                <span asp-validation-for="Plant.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plant.Price" class="control-label"></label>
                <input asp-for="Plant.Price" class="form-control" />
                <span asp-validation-for="Plant.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
