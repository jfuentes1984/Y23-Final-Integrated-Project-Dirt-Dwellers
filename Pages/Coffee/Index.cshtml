@page
@using Microsoft.AspNetCore.Identity
@model W21_Assignment.Pages.Coffee.IndexModel
@inject SignInManager<SiteUser> SignInManager
@inject UserManager<SiteUser> UserManager


@{
    ViewData["Title"] = "Index";
}
<img src="~/imgs/coffe.jpg" class="homeback" />
<h1>Our Coffee</h1>
@if (SignInManager.IsSignedIn(User))
{
    <h2>"Welcome, @Model.UserEmail"</h2>
    <p>
        <a asp-page="Create" class="EditCoffe">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Coffee[0].Name)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Coffee[0].Picture)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Coffee[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Coffee[0].Price)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Coffee)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <img src="~/imgs/@Html.DisplayFor(modelItem => item.Picture)" class="coffeBean" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.CoffeeId" class="EditCoffe">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.CoffeeId" class="EditCoffe">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.CoffeeId" class="EditCoffe">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Coffee[0].Name)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Coffee[0].Picture)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Coffee[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Coffee[0].Price)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Coffee)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <img src="~/imgs/@Html.DisplayFor(modelItem => item.Picture)" class="coffeBean" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<style>
    .table {
        font-family: 'Times New Roman', Times, serif;
        font-size: 20px;
        color: white;
        background-color: rgb(165, 160, 154, 0.5) !important;
    }

    .EditCoffe {
        color: white !important;
        font-family: 'Times New Roman', Times, serif !important;
        font-size: 20px !important;

    }

    .coffeBean {
        width: 150px !important;
    }
</style>